<?xml version="1.0" encoding="utf-8" ?>
<StackLayout xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ZeusBusiness.CustomControls.Flyout.FlyoutHeaderControl"
             xmlns:icons="clr-namespace:ZeusBusiness.MVVM.Model.Icons"
             Padding="20">

    <Image Source="{x:Static icons:AppDrawer.User}"
           HeightRequest="25"
           WidthRequest="25" />
    <Label x:Name="nameLbl"
           FontSize="28"
           FontAttributes="Bold" />
    <Label x:Name="emailLbl"
           FontSize="18" />


</StackLayout>
