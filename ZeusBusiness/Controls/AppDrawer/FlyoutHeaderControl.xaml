<?xml version="1.0" encoding="utf-8" ?>
<StackLayout xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ZeusBusiness.Controls.AppDrawer.FlyoutHeaderControl"
             xmlns:icons="clr-namespace:ZeusBusiness.MVVM.Model.Icons"
             xmlns:outlet="clr-namespace:ZeusBusiness.Model.Generics.General"
             Padding="20">
    
    <Image Source="{x:Static icons:AppDrawer.User}"
           HeightRequest="25"
           WidthRequest="25" />
    <Label x:Name="nameLbl"
           FontSize="28"
           FontAttributes="Bold" />
    <Label x:Name="emailLbl"
           FontSize="18" />

    <HorizontalStackLayout Padding="20"
                         HorizontalOptions="End">
        <Frame HeightRequest="50"
               Padding="20"
               HasShadow="True"
               BorderColor="#404040">
            <Picker x:Name="outletPicker"
                    Title="Select Outlet"
                    WidthRequest="150"
                    HeightRequest="45"
                    ItemsSource="{Binding OutletList}"
                    ItemDisplayBinding="{Binding Name}"
                    TextColor="Black"
                    SelectedIndexChanged="outletPicker_SelectedIndexChanged">

            </Picker>
        </Frame>

    </HorizontalStackLayout>

</StackLayout>
