<?xml version="1.0" encoding="UTF-8" ?>
<Shell x:Class="ZeusBusiness.AppShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:ZeusBusiness"
       xmlns:auth="clr-namespace:ZeusBusiness.View.Pages.Authentication"
       xmlns:dashboard="clr-namespace:ZeusBusiness.View.Pages.Dashboard"
       xmlns:startup="clr-namespace:ZeusBusiness.View.Helpers"
       xmlns:icons="clr-namespace:ZeusBusiness.Model.Icons"
       Shell.TabBarIsVisible="False">

    <ShellContent Shell.FlyoutBehavior="Disabled"
                  ContentTemplate="{DataTemplate startup:LoadingPage}"
                  Route="LoadingPage"
                  FlyoutItemIsVisible="False" />

    <ShellContent Shell.NavBarIsVisible="False"
                  ContentTemplate="{DataTemplate auth:LoginPage}"
                  Route="LoginPage"
                  Shell.FlyoutBehavior="Disabled"
                  FlyoutItemIsVisible="False" />


    <ShellContent Title="Dashboard"
                  Icon="{x:Static icons:AppDrawer.Dashboard}"
                  ContentTemplate="{DataTemplate dashboard:OwnerDashboardPage}" />

    <!--<FlyoutItem Route="OwnerDashboardPage"
                FlyoutDisplayOptions="AsMultipleItems">

        <ShellContent Title="Inventory"
                      Icon="{x:Static icons:AppDrawer.Inventory}"
                      ContentTemplate="{DataTemplate dashboard:OwnerDashboardPage}" />

        <ShellContent Title="Report"
                      Icon="{x:Static icons:AppDrawer.Report}"
                      ContentTemplate="{DataTemplate dashboard:OwnerDashboardPage}" />

        <ShellContent Title="Crm"
                      Icon="{x:Static icons:AppDrawer.Crm}"
                      ContentTemplate="{DataTemplate dashboard:OwnerDashboardPage}" />

        <ShellContent Title="Settings"
                      Icon="{x:Static icons:AppDrawer.Setting}"
                      ContentTemplate="{DataTemplate dashboard:OwnerDashboardPage}" />
    </FlyoutItem>-->

    <Shell.FlyoutFooter>
        <StackLayout Padding="20">
            <Button Text="Logout"
                    WidthRequest="200"
                    BackgroundColor="#023463"
                    FontSize="15"
                    CornerRadius="28"
                    Command="{Binding LogoutCommand}" />
        </StackLayout>
    </Shell.FlyoutFooter>

</Shell>
